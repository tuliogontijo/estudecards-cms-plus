{
  "manifest_version": 3,
  "name": "Estude Cards CMS Plus",
  "version": "1.3.0",
  "description": "Adiciona funcionalidades de inclus√£o de registros em lote no CMS do estudecards.com.br",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://estudecards.com.br/cms/*"],
      "js": ["content-script.bundle.js"],
      "css": ["styles/content-styles.css"],
      "run_at": "document_end"
    }
  ],

  "host_permissions": [
    "https://estudecards.com.br/cms/*"
  ]
}
